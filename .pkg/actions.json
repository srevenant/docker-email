{
    "config" : {
        "product": "mail-server"
    },
    "setenv": {
        "DOCKER_CACHE": "true",
        "DOCKER_IMG": "${product}",
        "DOCKER_NAME": "${product}"
    },
    "actions": {
        "push": {
            "type": "docker-push",
            "image": "${DOCKER_IMG}"
        },
        "build": {
            "type": "docker-build",
            "image": "${DOCKER_IMG}",
            "tags": [],
            "args": [],
            "setenv": {
                "PKG_VERSION": "${BUILD_VERSION}"
            }
        },
        "build-run": {
            "type": "group",
            "actions": ["build", "run"]
        },
        "build-nocache": {
            "type": "docker-build",
            "image": "${DOCKER_IMG}",
            "setenv": {
                "NO_DOCKER_CACHE": "true"
            }
        },
        "run": {
            "type": "script",
            "target": "docker-run"
        },
        "docker-login": {
            "type": "script"
        },
        "docker-shell": {
            "type": "script"
        },
        "clean": {
            "target": "docker-clean",
            "type": "script"
        },
        "assemble": {
            "type": "group",
            "actions": ["docker-login", "build", "push"]
        }
    }
}
